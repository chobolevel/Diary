extends ../config/base.pug
block content 
  p #{errorMessage ? errorMessage : null}
  form(method="POST")
    input(type="email", name="email", required, placeholder="이메일(아이디로 사용)")
    input(type="password", name="password", required, placeholder="비밀번호")
    input(type="password", name="passcheck", required, placeholder="비밀번호 확인")
    input(type="text", name="name", required, placeholder="이름")
    input(type="text", name="nickname", required, placeholder="닉네임")
    input(type="text", name="location", required, placeholder="지역")
    input(type="submit", value="회원가입")
  hr 
  a(href="/users/github/start") GitHub으로 로그인 &rarr;